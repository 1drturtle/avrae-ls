{
  "name": "avrae-ls-client",
  "displayName": "Avrae Draconic Alias Language Server",
  "description": "VS Code client for avrae-ls (draconic alias diagnostics and mock execution).",
  "version": "0.6.0",
  "engines": {
    "vscode": "^1.84.0"
  },
  "publisher": "drturtle43",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/1drturtle/avrae-ls.git"
  },
  "author": {
    "name": "1drturtle"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:avrae",
    "onCommand:avrae-ls.runAlias",
    "onCommand:avrae-ls.reloadConfig",
    "onCommand:avrae-ls.refreshGvars"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "avrae",
        "aliases": [
          "Avrae Alias",
          "Draconic"
        ],
        "extensions": [
          ".alias",
          ".drac"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "avrae",
        "scopeName": "source.avrae",
        "path": "./syntaxes/avrae.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.draconic": "python"
        }
      }
    ],
    "commands": [
      {
        "command": "avrae-ls.runAlias",
        "title": "Avrae: Run Alias (Mock)"
      },
      {
        "command": "avrae-ls.reloadConfig",
        "title": "Avrae: Reload Workspace Config"
      },
      {
        "command": "avrae-ls.showPreview",
        "title": "Avrae: Show Alias Preview"
      },
      {
        "command": "avrae-ls.refreshGvars",
        "title": "Avrae: Refresh GVARs"
      }
    ],
    "snippets": [
      {
        "language": "avrae",
        "path": "./snippets/avrae.code-snippets.json"
      }
    ],
    "configuration": {
      "title": "Avrae LS",
      "properties": {
        "avraeLS.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "markdownDescription": "Trace level for the Avrae language server (same behavior as other VS Code LSP extensions)."
        }
      }
    }
  },
  "scripts": {
    "build": "npm run bundle",
    "bundle": "npx esbuild ./extension.js --bundle --platform=node --format=cjs --external:vscode --outfile=dist/extension.js",
    "lint": "echo \"No lint configured\""
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "esbuild": "^0.27.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
